{
  "name": "Map-Editor",
  "version": "1.0.0",
  "description": "Electron based D&D dynamic lighting application",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build-win": "electron-packager . --overwrite --platform=win32 --arch=x64 --prune=true --out=build",
    "build-mac": "electron-packager . --overwrite --platform=darwin --arch=x64 --prune=true --out=build",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "author": "Raymond Davidson",
  "devDependencies": {
    "electron": "^3.0.2",
    "electron-builder": "^20.28.4",
    "electron-packager": "^12.1.2"
  },
  "dependencies": {},
  "build": {
    "appId": "dndmapapp",
    "files": [
      "**/*",
      "!maps",
      "!node_modules"
    ],
    "mac": {
      "category": "your.app.category.type"
    }
  }
}
